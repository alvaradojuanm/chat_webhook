        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='live_chat_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="livechat_webhook_settings">
                    <div class="o_setting_left_pane">
                        <field name="is_livechat_webhook_active"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_livechat_webhook_active"/>
                        <div class="text-muted">
                            Activa esta opción para enviar los mensajes a un bot externo.
                        </div>
                        <div class="mt16" attrs="{'invisible': [('is_livechat_webhook_active', '=', False)]}">
                            <label for="livechat_webhook_url" class="font-weight-bold"/>
                            <field name="livechat_webhook_url" placeholder="https://api.mibot.com/chat"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
