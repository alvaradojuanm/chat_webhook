livechat_webhook_integration/models/website.py


# -*- coding: utf-8 -*-
from odoo import fields, models

class Website(models.Model):
    _inherit = 'website'

    is_livechat_webhook_active = fields.Boolean(string="Activar Webhook para Live Chat")
    livechat_webhook_url = fields.Char(string="URL del Webhook")




